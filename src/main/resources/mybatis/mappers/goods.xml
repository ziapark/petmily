<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.goods">
	<resultMap id="goodsResult" type="GoodsVO">
    	<result property="goods_num" column="goods_num"/>
    	<result property="goods_name" column="goods_name"/>
    	<result property="seller_id" column="seller_id"/>
    	<result property="goods_maker" column="goods_maker"/>
    	<result property="goods_category" column="goods_category"/>
    	<result property="goods_sales_price" column="goods_sales_price"/>
    	<result property="goods_point" column="goods_point"/>
    	<result property="goods_stock" column="goods_stock"/>
    	<result property="goods_delivery_price" column="goods_delivery_price"/>
    	<result property="goods_status" column="goods_status"/>
    	<result property="goods_recommend" column="goods_recommend"/>
    	<result property="goods_credate" column="goods_credate"/>
     	<result property="del_yn" column="del_yn"/>
     	
     	<result property="image_id" column="image_id"/>
    	<result property="fileName" column="fileName"/>
    	<result property="fileType" column="fileType"/>
    	<result property="reg_id" column="reg_id"/>
    	<result property="reg_day" column="reg_day"/>
	</resultMap>
	<resultMap id="imageResult" type="imageFileVO">
    	<result property="image_id" column="image_id"/>
    	<result property="goods_num" column="goods_num"/>
    	<result property="fileName" column="fileName"/>
    	<result property="fileType" column="fileType"/>
    	<result property="reg_id" column="reg_id"/>
    	<result property="reg_day" column="reg_day"/>
	</resultMap>

	<select id="selectGoodsList" parameterType="String" resultMap="goodsResult">
	    <![CDATA[
	        select g.*, d.fileName
	        from goods g
	        join goods_image d on g.goods_num = d.goods_num
	        where d.filetype = 'main_image'
	          and goods_status = #{goodsStatus}
	        order by g.goods_creDate desc
	        limit 15
	    ]]>
	</select>

	<select id="selectAllGoodsList" resultMap="goodsResult">
  		<![CDATA[
    		SELECT * FROM goods  WHERE del_yn = 'n' ORDER BY goods_creDate DESC
  		]]>
	</select>
	<select id="selectGoodsDetail" resultMap="goodsResult"   parameterType="int"  >
    	<![CDATA[
        	 SELECT
             g.goods_num,
             g.goods_name,
             g.goods_sales_price,
             g.goods_point,
             d.fileName
         	FROM goods g
         	JOIN goods_image d ON g.goods_num = d.goods_num
         	WHERE g.goods_num = #{goods_num}
    	]]>
	</select>
	<select id="selectGoodsDetailImage" resultMap="imageResult"   parameterType="int"  >
	    <![CDATA[
		    select * from  goods_image 
		    where  fileType!='main_image'
			and goods_num=#{goods_num}
    	]]>
	</select>
	
   <select id="selectGoodsBySearchWord" resultMap="goodsResult" parameterType="String">
    	<![CDATA[
        	select g.*, d.fileName 
        	from goods g, goods_image d
        	where g.goods_num = d.goods_num
          	and d.filetype = 'main_image'
          	and g.goods_title like CONCAT('%', #{searchWord}, '%')
        	order by g.goods_creDate desc
    	]]>
	</select>
	
	<select id="selectKeywordSearch" resultType="String" parameterType="String">
    	<![CDATA[
    		select goods_title from goods 
    		where goods_title like CONCAT('%', #{keyword}, '%')
    		order by goods_creDate desc
    	]]>
	</select>
	
	<select id="selectGoodsByRecommendation" resultType="GoodsVO" parameterType="String">
	    <![CDATA[
	    	SELECT g.*, gi.*
			FROM goods g
			JOIN goods_image gi ON g.goods_num = gi.goods_num
			WHERE g.goods_recommend = #{weatherKeyword}
    	]]>		
	</select>
</mapper>