<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.admin.member">
	<resultMap id="memberResult" type="MemberVO">
		<result property="member_num" column="member_num" />
		<result property="member_id" column="member_id" />
		<result property="member_pw" column="member_pw" />
		<result property="member_name" column="member_name" />
		<result property="member_gender" column="member_gender" />
		<result property="member_birth_y" column="member_birth_y" />
		<result property="member_birth_m" column="member_birth_m" />
		<result property="member_birth_d" column="member_birth_d" />
		<result property="member_birth_gn" column="member_birth_gn" />
		<result property="tel1" column="tel1" />
		<result property="tel2" column="tel2" />
		<result property="tel3" column="tel3" />
		<result property="email1" column="email1" />
		<result property="email2" column="email2" />
		<result property="emailsts_yn" column="emailsts_yn" />
		<result property="zipcode" column="zipcode" />
		<result property="roadAddress" column="roadAddress" />
		<result property="jibunAddress" column="jibunAddress" />
		<result property="namujiAddress" column="namujiAddress" />
		<result property="member_join" column="member_join" />
		<result property="del_yn" column="del_yn" />
		<result property="role" column="role" />
	</resultMap>

	<select id="listMember" resultMap="memberResult"
		parameterType="java.util.HashMap">
		SELECT *
		FROM member
		WHERE DATE_FORMAT(member_join, '%Y-%m-%d') BETWEEN #{beginDate} AND
		#{endDate}
		<if
			test="search_type == 'member_id' and search_word != null and search_word != ''">
			AND member_id = #{search_word}
		</if>
		<if
			test="search_type == 'member_name' and search_word != null and search_word != ''">
			AND member_name LIKE CONCAT('%', #{search_word}, '%')
		</if>
		<if
			test="search_type == 'member_tel' and search_word != null and search_word != ''">
			AND CONCAT(tel1, tel2, tel3) LIKE CONCAT('%', #{search_word}, '%')
		</if>
		<if
			test="search_type == 'member_addr' and search_word != null and search_word != ''">
			AND (roadAddress LIKE CONCAT('%', #{search_word}, '%') OR jibunAddress
			LIKE CONCAT('%', #{search_word}, '%') OR namujiAddress LIKE
			CONCAT('%', #{search_word}, '%'))
		</if>
		ORDER BY member_join DESC
		<if test="begin != null">
			LIMIT #{begin}, 10
		</if>
	</select>

	<select id="memberDetail" resultMap="memberResult"
		parameterType="String">
		SELECT * FROM member
		WHERE member_id = #{member_id}
	</select>

	<update id="modifyMemberInfo" parameterType="java.util.HashMap">
		UPDATE member
		<set>
			<if test="member_pw != null and member_pw != ''">member_pw = #{member_pw},</if>
			<if test="member_gender != null and member_gender != ''">member_gender = #{member_gender},</if>
			<if test="member_birth_y != null and member_birth_y != ''">member_birth_y = #{member_birth_y},</if>
			<if test="member_birth_m != null and member_birth_m != ''">member_birth_m = #{member_birth_m},</if>
			<if test="member_birth_d != null and member_birth_d != ''">member_birth_d = #{member_birth_d},</if>
			<if test="member_birth_gn != null and member_birth_gn != ''">member_birth_gn = #{member_birth_gn},</if>
			<if test="tel1 != null and tel1 != ''">tel1 = #{tel1},</if>
			<if test="tel2 != null and tel2 != ''">tel2 = #{tel2},</if>
			<if test="tel3 != null and tel3 != ''">tel3 = #{tel3},</if>
			<if test="smssts_yn != null and smssts_yn != ''">smssts_yn = #{smssts_yn},</if>
			<if test="email1 != null and email1 != ''">email1 = #{email1},</if>
			<if test="email2 != null and email2 != ''">email2 = #{email2},</if>
			<if test="emailsts_yn != null and emailsts_yn != ''">emailsts_yn = #{emailsts_yn},</if>
			<if test="zipcode != null and zipcode != ''">zipcode = #{zipcode},</if>
			<if test="roadAddress != null and roadAddress != ''">roadAddress = #{roadAddress},</if>
			<if test="jibunAddress != null and jibunAddress != ''">jibunAddress = #{jibunAddress},</if>
			<if test="namujiAddress != null and namujiAddress != ''">namujiAddress = #{namujiAddress},</if>
			<if test="del_yn != null and del_yn != ''">del_yn = #{del_yn}</if>
		</set>
		WHERE member_id = #{member_id}
	</update>
</mapper>