<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.adminReser">

    <!-- 펜션 조회용 resultMap -->
    <resultMap id="pensionResult" type="com.petmillie.business.vo.PensionVO">
        <result property="p_num" column="p_num" />
        <result property="business_id" column="business_id" />
        <result property="p_name" column="p_name" />
        <result property="tel1" column="tel1" />
        <result property="tel2" column="tel2" />
        <result property="tel3" column="tel3" />
        <result property="checkin_time" column="checkin_time" />
        <result property="checkout_time" column="checkout_time" />
        <result property="room_count" column="room_count" />
        <result property="max_capacity" column="max_capacity" />
        <result property="facilities" column="facilities" />
        <result property="description" column="description" />
        <result property="reg_date" column="reg_date" />
        <result property="del_yn" column="del_yn" />
    </resultMap>

    <!-- 펜션 전체 목록 조회 -->
    <select id="selectAllPensionList" resultMap="pensionResult">
        <![CDATA[
            SELECT * FROM pension WHERE del_yn = 'N'
        ]]>
    </select>

    <!-- 예약 조회용 resultMap -->
    <resultMap id="reserResult" type="com.petmillie.reservation.vo.ReservaionVO">
        <result property="reservaion_id" column="reservation_id"/>
        <result property="business_id" column="business_id"/>
        <result property="member_id" column="member_id"/>
        <result property="reservation_date" column="reservation_date"/>
        <result property="end_date" column="end_date"/>
        <result property="reg_date" column="reg_date"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- 예약 목록 조회 -->
    <select id="reservationList" resultMap="reserResult" parameterType="String">
        <![CDATA[
            SELECT * FROM reservation
            WHERE business_id = #{business_id}
            ORDER BY reg_date DESC
        ]]>
    </select>

</mapper>
