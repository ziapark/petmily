<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.reservation">

    <resultMap id="pensionResult" type="com.petmillie.business.vo.PensionVO">
        <result property="p_num" column="p_num" />
        <result property="p_name" column="p_name" />
        <result property="facilities" column="facilities" />
        <result property="description" column="description" />
        <result property="del_yn" column="del_yn" />
        </resultMap>

    <select id="selectAllPensionList" resultMap="pensionResult">
        <![CDATA[
            SELECT
                p_num,
                p_name,
                facilities,
                description
            FROM
                pension
            WHERE
                del_yn = 'N'
        ]]>
    </select>
    
    <resultMap id="reserResult" type="com.petmillie.reservation.vo.ReservaionVO">
        <result property="reservaion_id" column="reservation_id"/>
        <result property="business_id" column="business_id"/>
        <result property="member_id" column="member_id"/>
        <result property="reservation_date" column="reservation_date"/>
        <result property="end_date" column="end_date"/>
        <result property="reg_date" column="reg_date"/>
        <result property="status" column="status"/>
    </resultMap>
    
    <select id="reservationList" resultMap="reserResult"  parameterType="ReservaionVO">
    <![CDATA[
        SELECT * FROM reservation
        WHERE business_id = #{business_id}
        ORDER BY reg_date DESC
    ]]>
    </select>

</mapper>