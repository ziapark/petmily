<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">

<resultMap id="comunityResult" type="BoardVO">
    <result property="comu_id" column="comu_id"/>
    <result property="member_id" column="member_id"/>
    <result property="subject" column="subject"/>
    <result property="content" column="content"/>
    <result property="board_type" column="board_type"/>
    <result property="file_url" column="file_url"/>
    <result property="views" column="views"/>
    <result property="likes" column="likes"/>
    <result property="reg_date" column="reg_date"/>
    <result property="update_date" column="update_date"/>
    <result property="del_yn" column="del_yn"/>
</resultMap>

<resultMap id="commentResult" type="CommentVO">
    <result property="comment_id" column="comment_id"/>
    <result property="member_id" column="member_id"/>
    <result property="comment_content" column="comment_content"/>
    <result property="reg_date" column="reg_date"/>
</resultMap>
    
	<select id="selectBoardList" parameterType="map" resultType="com.petmillie.board.vo.BoardVO">
	    SELECT comu_id, member_id, subject, reg_date, views
	    FROM comunity
	    <where>
	        board_type = #{board_type}
	        <if test="text != null and text != ''">
	            <choose>
	                <when test="items == 'subject'">
                    	AND subject LIKE CONCAT('%', #{text}, '%')
	                </when>
	                <when test="items == 'content'">
	                    AND content LIKE CONCAT('%', #{text}, '%')
	                </when>
	                <when test="items == 'member_id'">
	                    AND member_id LIKE CONCAT('%', #{text}, '%')
	                </when>
	            </choose>
	        </if>
	    </where>
	    ORDER BY comu_id DESC
	    LIMIT #{start}, #{limit}
	</select>
    
    <select id="getTotalCount" parameterType="map" resultType="int">
	    SELECT COUNT(*) FROM comunity
	    <where>
	        board_type = #{board_type}
	        <if test="text != null and text != ''">
	            <choose>
	                <when test="items == 'subject'">
	                    AND subject LIKE #{text}
	                </when>
	                <when test="items == 'content'">
	                    AND content LIKE #{text}
	                </when>
	                <when test="items == 'member_id'">
	                    AND member_id LIKE #{text}
	                </when>
	            </choose>
	        </if>
	    </where>
	</select>

    
    <select id="getListCount" resultType="int">
        SELECT COUNT(*) FROM comunity
    </select>

    <select id="getBoardList" resultType="com.petmillie.board.vo.BoardVO">
        SELECT * FROM comunity
        <where>
            <if test="items != null and text != null and text != ''">
                <choose>
                    <when test="items == 'subject'">
                        subject LIKE CONCAT('%', #{text}, '%')
                    </when>
                    <when test="items == 'content'">
                        content LIKE CONCAT('%', #{text}, '%')
                    </when>
                    <when test="items == 'member_id'">
                        member_id LIKE CONCAT('%', #{text}, '%')
                    </when>
                </choose>
            </if>
        </where>
        ORDER BY comu_id DESC
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertBoard" parameterType="BoardVO">
        INSERT INTO comunity (member_id, subject, content,file_name,board_type)
        VALUES (#{member_id}, #{subject}, #{content},#{file_name},#{board_type})
    </insert>

    <select id="getBoardByNum" parameterType="int" resultType="BoardVO">
        SELECT * FROM comunity WHERE comu_id = #{num}
    </select>

    <update id="updateViews" parameterType="int">
        UPDATE comunity SET views = views + 1 WHERE comu_id = #{comu_id}
    </update>

    <update id="updateBoard" parameterType="BoardVO">
        UPDATE comunity
        SET member_id = #{member_id}, subject = #{subject}, content = #{content}, file_name =#{file_name},board_type=#{board_type}
        WHERE comu_id = #{comu_id}
    </update>

    <delete id="deleteBoard" parameterType="int">
        DELETE FROM comunity WHERE comu_id = #{comu_id}
    </delete> 
    
    
    <insert id="insertComment" parameterType="CommentVO">
        INSERT INTO comment (member_id, comment_content, comu_id)
        VALUES (#{member_id}, #{comment_content} , #{comu_id})
    </insert>
    
    <select id="selectComment" resultType="CommentVO">
        SELECT *
        FROM comment
        WHERE comu_id=#{comu_id}
        ORDER BY reg_date ASC
    </select>
    
    <select id="selectCommentOne" parameterType="int" resultType="CommentVO">
        SELECT *
        FROM comment
        WHERE comment_id=#{comment_id}
    </select>
    
    <delete id="deleteComment" parameterType="int">
        DELETE FROM comment WHERE comment_id = #{comment_id}
    </delete> 
    
    <select id="getWriterId" parameterType="String" resultType="String" >
        SELECT member_id FROM comment WHERE member_id = #{session_id}
    </select>
    
    <update id="updateComment" parameterType="CommentVO">
    	UPDATE comment
        SET comment_content = #{comment_content}
        WHERE comment_id = #{comment_id}
    </update>
    
	<select id="selectLike" parameterType="LikeVO" resultType="LikeVO" >
        SELECT * FROM likes WHERE member_id = #{member_id} and comu_id = #{comu_id}
    </select>
	<insert id="insertLike" parameterType="LikeVO"> 
		INSERT INTO likes (member_id, comu_id)
        VALUES (#{member_id}, #{comu_id})
	</insert>
	
	<delete id="deleteLike" parameterType="LikeVO">
        DELETE FROM likes WHERE member_id = #{member_id} and comu_id = #{comu_id}
    </delete> 
    
    <select id="countLikes" resultType="int" parameterType="int">
	    SELECT COUNT(*) FROM likes
	    WHERE comu_id = #{comu_id}
	</select>
</mapper>